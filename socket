    this.initializeSocketData();
    this.initializeJewelData();
    this.init();
  }
  
  init() {
    console.log('âš¡ Initializing Ultra-Fast Socket System...');
    
    try {
      this.addStyles();
      console.log('âœ… Styles added');
      
      this.createSocketModal();
      console.log('âœ… Socket modal created');
      
      this.createJewelModal();
      console.log('âœ… Jewel modal created');
      
      this.initializeSocketContainers();
      console.log('âœ… Socket containers initialized');
      
      this.setupEventListeners();
      console.log('âœ… Event listeners setup');
      
      // Make addSocket globally available immediately
      window.addSocket = (section) => {
        console.log(`ðŸŒ Global addSocket called for section: ${section}`);
        this.addSocket(section);
      };
      console.log('âœ… Global addSocket function created');
      
      setTimeout(() => {
        this.isInitializing = false;
        this.updateAll();
        console.log('âœ… Socket System Ready!');
      }, 100);
      
    } catch (error) {
      console.error('âŒ Error during initialization:', error);
    }
  }

