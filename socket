// === GLOBAL INITIALIZATION ===
let unifiedSystem;

console.log('ðŸ“¦ Socket.js file loaded');

function initUnifiedSystem() {
  console.log('ðŸš€ initUnifiedSystem called');
  
  if (unifiedSystem) {
    console.log('âš ï¸ System already initialized');
    return;
  }
  
  try {
    console.log('ðŸ”§ Creating new UnifiedSocketSystem...');
    unifiedSystem = new UnifiedSocketSystem();
    
    // Global accessibility for backward compatibility
    window.unifiedSystem = unifiedSystem;
    window.statsCalculator = unifiedSystem;
    window.characterSystem = unifiedSystem;
    
    console.log('âœ… UnifiedSocketSystem created successfully');
    console.log('ðŸ” Testing: window.addSocket =', typeof window.addSocket);
    
  } catch (error) {
    console.error('âŒ Error creating UnifiedSocketSystem:', error);
  }
}

// Multiple initialization strategies
console.log('ðŸ“Š Document ready state:', document.readyState);

if (document.readyState === 'loading') {
  console.log('â³ Waiting for DOMContentLoaded...');
  document.addEventListener('DOMContentLoaded', () => {
    console.log('âœ… DOMContentLoaded fired');
    initUnifiedSystem();
  });
} else {
  console.log('ðŸƒ DOM already ready, initializing immediately');
  initUnifiedSystem();
}

// Fallback initialization
setTimeout(() => {
  if (!unifiedSystem) {
    console.log('â° Fallback initialization...');
    initUnifiedSystem();
  }
}, 500);

// Another fallback for after all scripts load
window.addEventListener('load', () => {
  if (!unifiedSystem) {
    console.log('ðŸ”„ Window load fallback initialization...');
    initUnifiedSystem();
  }
});

// Export for module use
if (typeof module !== 'undefined' && module.exports) {
  module.exports = UnifiedSocketSystem;
}